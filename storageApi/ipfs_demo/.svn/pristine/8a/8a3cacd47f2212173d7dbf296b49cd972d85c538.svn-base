.xBtn {
  width: 20px;
  height: 20px;
  position: absolute;
  cursor: pointer;
  top: -26px;
  right: -25px;
}
.xBtn img {
  width: 100%;
  height: 100%;
}
.maskTwo {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  bottom: 0;
  background: #000000;
  filter: alpha(opacity=60);
  opacity: 0.60;
  font-size: 1px;
  display: none;
  overflow: hidden;
  z-index: 1006;
}
.x {
  width: 15px;
  height: 16px;
  position: absolute;
  cursor: pointer;
  top: -26px;
  right: -25px;
  /*background: red;*/
}
.overlay_pop {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  bottom: 0;
  background: #000000;
  filter: alpha(opacity=60);
  opacity: 0.60;
  font-size: 1px;
  z-index: 1008;
  display: block;
  overflow: hidden;
}
.publicBox {
  z-index: 1009;
  width: 80%;
  min-height: 100px;
  position: absolute;
  top: 150px;
  left: 0;
  right: 0;
  margin: auto;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
  border-radius: 2px;
  padding: 10px 10px;
}
.confirm,
.otherConfirm {
  background: #fff;
  z-index: 1009;
  width: 80%;
  min-height: 100px;
  position: absolute;
  top: 150px;
  left: 0;
  right: 0;
  margin: auto;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
  border-radius: 2px;
  padding: 10px 10px;
}
.confirm .confirm-img,
.otherConfirm .confirm-img {
  height: 40px;
}
.confirm .confirm-img img,
.otherConfirm .confirm-img img {
  height: 100%;
}
.confirm .confirm-title,
.otherConfirm .confirm-title {
  margin-top: 10px;
  height: 25px;
  line-height: 25px;
  font-size: 16px;
  color: #404040!important;
}
.confirm .confirm-message,
.otherConfirm .confirm-message {
  font-size: 14px;
}
.confirm .confirm-message .confirm-context,
.otherConfirm .confirm-message .confirm-context {
  margin-top: 10px;
}
.confirm .confirm-message .confirm-btns,
.otherConfirm .confirm-message .confirm-btns {
  margin-top: 15px;
  text-align: center;
}
.confirm .confirm-message .confirm-btns .m_btn,
.otherConfirm .confirm-message .confirm-btns .m_btn {
  width: 60px;
  height: 30px;
  line-height: 30px;
  display: inline-block;
  margin-left: 10px;
  margin-right: 10px;
  cursor: pointer;
}
.otherConfirm {
  /* display: none;*/
}
.otherConfirm .confirm-title {
  margin-top: 0;
}
@media (max-width: 640px) {
  .confirm,
  .otherConfirm {
    width: 80%;
  }
}
@media (min-width: 641px) {
  .confirm,
  .otherConfirm {
    width: 397px;
  }
}
