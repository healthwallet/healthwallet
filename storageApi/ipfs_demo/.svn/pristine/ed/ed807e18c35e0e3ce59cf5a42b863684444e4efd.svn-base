
.papaya-viewer {
    width: 100%;
    height: 100%;
    z-index: 1;
    line-height: 1;
    font-family: sans-serif;
}


.papaya-viewer div, .papaya-viewer canvas {
    width: 100%;
    height: 100%;


    margin: 0;
    padding: 0;
    border: 0;
    font: inherit;
    font-size: 100%;
    vertical-align: baseline;
    font-family: sans-serif;
}


.papaya-viewer canvas {
    width: 100%;
    height: 100%;
    cursor: crosshair;
}
